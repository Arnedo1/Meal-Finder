// to make the first letter uppercase
const firstCap = (str) => {
    if(!str) {return ''}
    return str[0].toUpperCase() + str.slice(1)
}

// to run the function when enter is pressed
const clickedEnter = (e) => {
    if (e.key === 'Enter'){
        e.preventDefault()
        runFunction()
    }
}

//  remove everything from '.' till end
const makeWholeInt = (number) => {
    if (number) {
        return Math.trunc(number)
    }
}
